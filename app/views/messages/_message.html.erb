<div id="<%= dom_id message %>">
  <div class="row p-3">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= message.user.email %>
          </h5>
          <p class="card-text">
            <%= message.content %>
          </p>
          <p class="card-text">
            <small class="text-muted" data-local="time-ago">
              <%= time_ago_in_words(message.created_at) %> ago
            </small>
          </p>
        </div>

      <div class="btn-group p-3" role="group" aria-label="Basic example">
        <%= button_to "Edit this message", edit_room_message_path(message.room, message), method: :get, class: 'btn btn-light' %>
        <%= button_to "Destroy this message", room_message_path(message.room, message), method: :delete, class: 'btn btn-light' %>
      </div>
    </div>
  </div>
</div>
